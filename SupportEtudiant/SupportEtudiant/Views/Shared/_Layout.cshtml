<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    <style>
        body, html {
            height: 100%;
            margin: 0px auto;
            padding: 0px;
        }

        .wrapper {
            height: auto;
            min-height: 100%;
            margin: 0px auto;
        }



        a {
            color: #be4500;
        }

            a:hover {
                color: #8e5f44;
            }

            a.no-color {
                color: inherit;
            }

            a.block-link {
                display: block;
                color: inherit;
            }
    </style>
    <link href="/favicon.ico" type="image/x-icon" rel="FaviconIcon" />
</head>
<body class="pace-done fixed-sidebar fixed-nav">
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @RenderSection("scripts", required: false)

    <!-- Wrapper-->
    <div id="wrapper">

        <!-- Navigation -->
        @Html.Partial("_Navigation")

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg" style="height:100%">
            @*<div class="container-fluid" style="margin-top:60px; padding-left:0px">*@
            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            @Html.Partial("_Footer")
            @*</div>*@


        </div>
        <!-- End page wrapper-->
    </div>
    <!-- End wrapper-->
</body>
</html>
